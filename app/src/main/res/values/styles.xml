<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StdStyle" parent="android:Theme.Material" tools:targetApi="lollipop">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="StdStyle.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="StdStyle.TextMainMenuCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/main_screen_card_title_margin_size</item>
    </style>
    <style name="StdStyle.TextRecordingDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="StdStyle.TextNavDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="StdStyle.TextNavDescLand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="StdStyle.StepItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="StdStyle.ProfileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="StdStyle.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="StdStyle.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="StdStyle.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackgroundStart</item>
    </style>
    <style name="StdStyle.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorButtonEnd</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/colorButtonStart</item>
    </style>
    <style name="StdStyle.ProfileButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorButtonEnd</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/colorButtonStart</item>
    </style>
    <style name="StdStyle.HistoryButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorButtonEnd</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/colorButtonStart</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
